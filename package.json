{
    "name": "chess-game-solo",
    "version": "1.0.0",
    "description": "Chess game",
    "workspaces": [
        "client",
        "game-engine",
        "server"
    ],
    "scripts": {
        "postinstall": "sh scripts/link-packages.sh",
        "start": "cd ./client && npm start",
        "start:server": "cd ./server && npm start",
        "test": "jest && cd server && npm test",
        "test:watch": "jest --watch",
        "test:ci": "jest --ci && cd server && npm run test:ci",
        "test:coverage": "jest --coverage && cd server && npm run test:coverage",
        "build:engine": "cd ./game-engine && npm run build",
        "build": "sh scripts/build.sh",
        "cleanup": "sh scripts/cleanup.sh",
        "deploy": "sh scripts/deploy.sh",
        "spec:lint": "markdownlint-cli2 \"docs/**/*.md\"",
        "spec:lint:fix": "markdownlint-cli2 --fix \"docs/**/*.md\"",
        "spec:check": "echo 'Checking spec documentation...' && npm run spec:lint",
        "spec:toc": "markdown-toc -i docs/ONLINE_MULTIPLAYER_SPEC.md"
    },
    "keywords": [
        "chess",
        "typescript",
        "unit-tests"
    ],
    "author": "mterczynski",
    "license": "MIT",
    "dependencies": {
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/passport": "^11.0.5",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "typescript": "^4.4.3"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/lodash": "^4.14.175",
        "jest": "^27.2.4",
        "markdown-toc": "^1.2.0",
        "markdownlint-cli2": "^0.20.0",
        "ts-jest": "^27.0.5"
    }
}
