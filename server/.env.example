# PostgreSQL connection settings for NestJS/TypeORM

# LOCAL DEVELOPMENT (RECOMMENDED)
# Install PostgreSQL locally or use Docker:
# docker run -d -p 5432:5432 -e POSTGRES_PASSWORD=postgres postgres:15
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chess

# PRODUCTION ONLY - Supabase Transaction Pooler
# Get credentials from: Supabase Dashboard → Connect → Transaction pooler
# POSTGRES_HOST=aws-1-eu-west-2.pooler.supabase.com
# POSTGRES_PORT=6543
# POSTGRES_USER=postgres.YOUR_PROJECT_REF
# POSTGRES_PASSWORD=your-supabase-password
# POSTGRES_DB=postgres

# Connection URL (alternative format, not currently used)
DATABASE_URL=postgresql://postgres:password@localhost:5432/chess

# JWT secret for signing tokens
JWT_SECRET=your-super-secret-key-change-in-production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
