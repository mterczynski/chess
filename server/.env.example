# PostgreSQL connection settings for NestJS/TypeORM
# Option 1: Individual variables (used by current TypeORM config)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chess

# Option 2: Connection URL (for Render, Supabase, or other platforms)
DATABASE_URL=postgresql://postgres:password@localhost:5432/chess

# JWT secret for signing tokens
JWT_SECRET=your-super-secret-key-change-in-production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
